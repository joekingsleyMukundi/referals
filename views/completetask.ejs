<body>
    <%- include('includes/nav'); -%>
            <!--  my account wrapper end -->    
            <!--  email wrapper start -->
             <div class="email_notifcation_wrapper float_left">
                <div class="row">
                    <div class="col-md-12 col-lg-12 col-sm-12 col-12">
                        <div class="sv_heading_wraper">

                            <h3>Complete Task</h3>
                            <%if(message.length>0){%>
                                <div class="alert alert-danger">
                                    <%= message %>
                                </div>
                                 <%}%>
                        </div>
                    </div>
                </div>
                <div class="email_notify_top float_left">
                    <%if(taskType=="blog"){%>
                        <div class="row">
                            <div class="col-xl-3 col-md-6 col-lg-4 col-sm-12 col-12">
                                <div class="change_password_wrapper float_left">
                                    <form action="/task/blogcompletetask" method="post">
                                        <div class="change_pass_field float_left">	
                                        <div class="payment_gateway_wrapper payment_select_wrapper">
                                        <label>Write a blog of <%=task.words%> words about <%=task.topic%> and earn certainamount</label>
                                    </div>							
                                            <div class="change_field">
                                                <label>Title</label>
                                                    <input type="text" name="title" placeholder="title" required>
                                            </div>
                                            <div class="change_field">
                                                <label>Writer</label>
                                                    <input type="url" name="link" placeholder="title" required>
                                            </div> 
                                            <div class="change_field">
                                                <label>Blog :</label>
                                                    <textarea name="blog" id="" cols="100" rows="10"></textarea>
                                            </div>                        
                                            <div class="about_btn  login_btn float_left">
                                                <ul>
                                                    <li>
                                                        <button type="submit">Submit</button>
                                                    </li>
                                                </ul>
                                                </div>
                                            </div>
                                        </form>
                                </div>
                            </div>
                           
                        </div>
                        <%}else if(taskType=="invite"){%>
                            <p>Invite <%=task.invites%> and earn <%= task.baseAmount%>. To earn more please ensure that they buy a package</p>
                            <form action="/task/invitecompletetask" method="post">
                                <div class="about_btn  login_btn float_left">
                                    <ul>
                                        <li>
                                            <button type="submit">Complete?</button>
                                        </li>
                                    </ul>
                                    </div>
                                </div>
                            </form>
                            <%}else if(taskType=="link"){%>
                                <%if(task.task == "share"){%>
                                   Copy this link,<br> go to the site it redirects you to,<br> if it is Youtube make sure you subscribe to our chanel if you have then like all of ur videos,<br>if it is facebook instagram or twitter make sure you follow us if you have then like all our pictures <br> then  Share this link to  whats app twitter or facebook and <br>
                                   if you had already subcribed or followed us depending on the platform post the screenshot of  you sharing our link <br>
                                   and if you had not please post the screenshot of you either following us or subscribing depending on the platform
                                    <div class="input-group">
                                        <input type="text" id="copyRefLink" class="form-control"
                                            value='<%=task.link%>'>
                                        <span  onclick="copyFunction()" class="input-group-text">Copy</span>
                                    </div>
                                    <form action="/task/sharelinkcompletetask" method="post">
                                        <div class="change_field">
                                            <label>screen shot</label>
                                                <input type="file" name="screenshot" required >
                                        </div> 
                                        <div class="about_btn  login_btn float_left">
                                            <ul>
                                                <li>
                                                    <button type="submit">Complete?</button>
                                                </li>
                                            </ul>
                                            </div>
                                    </form>
                                <%}else{%>
                                   <p>watch this video on full screen mode and send the screenshot doing so.<b>Ensure that you are subscribed to our channel </b></p>
                                    <div>
                                        <iframe width="260px" height="215px" src="<%=task.link%>" title="YouTube video player" frameborder="0"allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                    </div>
                                    <form action="/task/sharelinkcompletetask" method="post">
                                        <div class="change_field">
                                            <label>screen shot</label>
                                                <input type="file" name="screenshot" required>
                                        </div>
                                        <div class="about_btn  login_btn float_left">
                                            <ul>
                                                <li>
                                                    <button type="submit">Submit</button>
                                                </li>
                                            </ul>
                                            </div> 
                                    </form>
                                    <%}%>
                                <%}else if(taskType=="pic"){%>
                                    Please copy the link provided and go to that page the picture you find please make sure you like and also share the link.
                                    once you are done please  send  us a screenshot of you sharing on your social medioa platforms
                                    <div class="input-group">
                                        <input type="text" id="copyRefLink" class="form-control"
                                            value='<%=task.picture%>'>
                                        <span  onclick="copyFunction()" class="input-group-text">Copy</span>
                                    </div>
                                    <form action="/task/sharepiccompletetask" method="post">
                                        <div class="change_field">
                                            <label>screen shot</label>
                                                <input type="file" name="screenshot" required >
                                        </div> 
                                        <div class="about_btn  login_btn float_left">
                                            <ul>
                                                <li>
                                                    <button type="submit">Complete?</button>
                                                </li>
                                            </ul>
                                            </div>
                                    </form>
                                    <%}else if(taskType=="survey"){%>
                                        <form action="/task/surveycompletetask" method="post">
                                            <div class="change_field">
                                                <label><%=task.question1%></label>
                                                    <input type="text" name="answer1" placeholder="answer" required>
                                            </div> 
                                      
                                       
                                            <div class="change_field">
                                                <label><%=task.question2%></label>
                                                <input type="text" name="answer2" placeholder="answer" required>
                                            </div> 
                                       
                                        
                                            <div class="change_field">
                                                <label><%=task.question3%></label>
                                                <input type="text" name="answer3" placeholder="answer" required>
                                            </div> 
                                      
                                            <div class="change_field">
                                                <label><%=task.question4%></label>
                                                <input type="text" name="answer4" placeholder="answer" required>
                                            </div> 
                                        
                                            <div class="change_field">
                                                <label><%=task.question5%></label>
                                                <input type="text" name="answer5" placeholder="answer" required>
                                            </div>

                                            <div class="about_btn  login_btn float_left">
                                                <ul>
                                                    <li>
                                                        <button type="submit">Submit</button>
                                                    </li>
                                                </ul>
                                                </div>
                                        </form>
                                    <%}%>
                   
                </div>
            </div>
            <!--  email wrapper end -->
            <!--  footer  wrapper start -->
            <%- include('includes/footer'); -%>
         </div>
       <!--  footer  wrapper end -->      
    <!-- main box wrapper End-->

    <script>
        function copyFunction(){
    var copyLink = document.getElementById("copyRefLink")
    /*select the text field*/
    copyLink.select();
    copyLink.setSelectionRange(0,999999)/*for mobile*/
    /*copy the text inside text field*/
    document.execCommand('copy');
    /* alert copied text*/
    alert('Copied the the text: ' + copyLink.value)
    }
   </script>


